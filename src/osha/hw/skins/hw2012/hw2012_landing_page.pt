<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="osha"
      lang="en">
  <body>
    <metal:main fill-slot="main"
           tal:define='doc_list python:context.getFolderContents({"portal_type":"Document"});
               first_doc python:doc_list and doc_list[0].getObject() or None;
               title python:first_doc and first_doc.Title or None;
               body python:first_doc and first_doc.getText() or None;
               folders python:context.getFolderContents({"portal_type":"Folder"});
               images python:context.getFolderContents({"portal_type":"Image"});
               first_image python:images and images[0].getObject() or None;
               myarea python:request.RESPONSE.addHeader("X-Deliverance-Page-Class", "general landingpage %s" % context.getId());
               '>
      <section tal:attributes="class context/getId">

        <div id="introduction">

          <h1 id="title" tal:content="title" />
          <div id="body" tal:content="structure body" />

          <ul class="navigation" >
            <li tal:repeat="folder folders">
              <a data-injection="#mainContent"
                 data-setclass="id='body'!values='template-*:template-content-a"
                 tal:content="folder/Title"
                 tal:attributes="href string:${folder/getId}/hw2012_details_page#mainContent"
                 />
            </li>
          </ul>

          <tal:background condition="first_image">
<figure>
            <img width="950" id="background" tal:attributes="src string:${first_image/getId}/image_large; alt first_image/Title" />
<figcaption tal:content="structure first_image/Description" />
</figure>
          </tal:background>

        </div>
      </section>

    </metal:main>
  </body>
</html>
